<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>


    <style name="DetailsTheme" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">#ff0000</item>
        <item name="colorControlActivated">@color/material_color_red_900</item>
    </style>

    <style name="TextApperaence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ToolbarCenterTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
